/* General body styles */
body { 
    margin: 0; 
    overflow: hidden; 
    background: #000; /* Black background for space effect */
}

/* Information overlay styles */
#info { 
    position: absolute; 
    top: 10px; 
    left: 10px; 
    color: #fff; /* White text color for visibility */
    font-family: Arial, sans-serif;
    z-index: 100; /* Ensures it stays on top */
    text-shadow: 0 0 5px rgba(255, 255, 255, 0.5); /* Subtle glow effect */
}

/* Chat container styles */
#chat-container {
    position: absolute;
    top: 20px; /* Positioned at the top */
    right: 20px; /* Positioned to the right */
    width: 320px; /* Fixed width for chat */
    background: rgba(0, 0, 0, 0.85); /* Semi-transparent background */
    color: #fff; /* White text */
    padding: 15px; /* Padding inside the chat box */
    border-radius: 8px; /* Rounded corners */
    backdrop-filter: blur(5px); /* Background blur effect */
    border: 1px solid rgba(255, 255, 255, 0.1); /* Light border */
}

/* Chat messages area styles */
#chat-messages {
    max-height: 400px; /* Maximum height for scrolling */
    overflow-y: auto; /* Allows vertical scrolling */
    margin-bottom: 15px; /* Space below chat messages */
    padding-right: 10px; /* Space on the right */
}

/* Individual chat message styles */
.chat-message { 
    margin: 10px 0; /* Space between messages */
    padding: 8px 12px; /* Padding for messages */
    border-radius: 6px; /* Rounded corners */
    background: rgba(255, 255, 255, 0.05); /* Light background for messages */
    animation: fadeIn 0.3s ease-in; /* Fade-in animation */
}

/* Styles for system messages */
.system-message {
    color: #00ff88; /* Bright green color for system messages */
    background: transparent; /* No background */
    border: 1px solid rgba(0, 255, 136, 0.2); /* Light border */
}

/* Preformatted text styles */
pre {
    background: #1a1a1a; /* Dark background for code */
    color: #00ff88; /* Bright green text */
    padding: 12px; /* Padding for preformatted text */
    border-radius: 6px; /* Rounded corners */
    overflow-x: auto; /* Horizontal scrolling if needed */
    font-family: 'Courier New', monospace; /* Monospace font for code */
    margin: 8px 0; /* Space around preformatted text */
    border: 1px solid rgba(255, 255, 255, 0.1); /* Light border */
}

/* Loading indicator styles */
#loading {
    display: none; /* Hidden by default */
    color: #ffd700; /* Gold color for loading text */
    padding: 8px; /* Padding around loading text */
    text-align: center; /* Center align the text */
}

/* Input and button styles */
input, button {
    width: 100%; /* Full width */
    margin: 8px 0; /* Space around inputs and buttons */
    padding: 10px; /* Padding inside inputs and buttons */
    border: none; /* No border */
    border-radius: 4px; /* Rounded corners */
    font-size: 14px; /* Font size */
    transition: all 0.3s ease; /* Transition for hover effects */
}

/* Input field styles */
input {
    background: rgba(255, 255, 255, 0.1); /* Semi-transparent background */
    color: #fff; /* White text */
}

/* Input field focus styles */
input:focus {
    outline: 2px solid #007bff; /* Blue outline on focus */
}

/* Button styles */
button {
    background: #007bff; /* Initial button color */
    color: white; /* White text */
    font-weight: bold; /* Bold text */
    cursor: pointer; /* Pointer cursor on hover */
}

/* Button hover effects */
button:hover {
    background: #0056b3; /* Darker blue on hover */
    transform: translateY(-1px); /* Slight upward movement */
}

/* Fade-in animation */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); } /* Start from transparent */
    to { opacity: 1; transform: translateY(0); } /* End at full opacity */
}
